# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                     				    Application.index
GET     /test													Application.test
GET     /insertflight/flight									Application.insertFlight
GET     /insertoffer											Application.insertOffer
GET		/getflightoffers/{id}									Application.getFlightOffers
GET		/getFlightByFlightNumber/{flightNumber}					Application.getFlightbyFlightNumber
GET 	/getOffersByFlightNumber/{flightNumber}					Application.getOffersByFlightNumber
GET     /insertConfirmation											Application.insertConfirmation


# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
