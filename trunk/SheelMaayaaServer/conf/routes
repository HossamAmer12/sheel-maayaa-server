# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~



# Home page
GET     /                                     				    Application.index
POST    /insertflight/											Application.insertFlight(flight)
GET     /test													Application.test
GET		/getFlightByFlightNumber/{flightNumber}					Application.getFlightbyFlightNumber
GET     /insertConfirmation										Application.insertConfirmation
GET 	/getflightbyairports/{source}/{destination}				Application.getFlightByAirports

GET     /insertoffer											Offers.insertOffer
GET		/getflightoffers/{id}									Offers.getFlightOffers
GET 	/getOffersByFlightNumber/{flightNumber}					Offers.getOffersByFlightNumber
GET 	/getOffersByAirports/{source}/{destination}				Offers.getOffersByAirports


# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
