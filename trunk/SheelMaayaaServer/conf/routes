# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~



# Home page
GET     /                                     				    Application.index
POST    /insertflight/										Application.insertFlight(flight)
GET     /test													Application.test
GET     /insertConfirmation										Application.insertConfirmation

GET     /insertoffer/{userId}/{flightId}/{kgs}/{price}/{userStatus}						Offers.insertOffer
GET		/getflightoffers/{id}															Offers.getFlightOffers
GET 	/getoffersbyflightnumber/{flightNumber}/{userStatus}/{date}						Offers.getOffersByFlightNumber
GET 	/getoffersbyairports/{source}/{destination}/{userStatus}/{date} 				Offers.getOffersByAirports

GET 	/insertflight/{flightNumber}/{source}/{destination}/{departureDate}				Flights.insertFlight

GET		/insertuser/{username}/{gender}/{nationality}									Users.insertUser


# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
